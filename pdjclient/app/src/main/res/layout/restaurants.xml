<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/geoButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_action_place"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchText"
        android:layout_alignBottom="@id/geoButton"
        android:layout_toRightOf="@id/geoButton"
        android:layout_toLeftOf="@+id/searchBtn"
        android:layout_toStartOf="@+id/searchBtn" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchBtn"
        android:layout_alignBottom="@id/geoButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_action_search"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/geoButton"
        android:text="Chercher les restaurants le plus proche ou d'une adresse prÃ©cise"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:textSize="8pt"
        android:id="@+id/resultsTitle"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restosList"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/resultsTitle"
        android:divider="@android:color/holo_blue_light"
        android:dividerHeight="1dp"

        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        />




</RelativeLayout>